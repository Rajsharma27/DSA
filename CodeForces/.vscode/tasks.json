{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Run C++ Program with Input and Output",
      "type": "shell",
      "command": "g++",
      "args": [
        "-std=c++17",
        "-o",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "${file}",
        "&&",
        "${fileDirname}\\${fileBasenameNoExtension}.exe",
        "<",
        "input.txt",
        ">",
        "output.txt"
      ],
      "group": "build",
      "problemMatcher": ["$gcc"],
      "detail": "Compiles and runs the C++ program, taking input from input.txt and writing output to output.txt."
    }
  ]
}
